<%yield :bildgalleri%>
<%= form_for([@album, @album.images.build]) do |f| %>
  <% if @image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@image.errors.count, "error") %> hindrar bilden frÃ¥n att sparas:</h2>
      <ul>
        <% @image.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <div class="actions">
	<%= f.label 'Underkategori', :class => 'reg-label'%>
  	<div class="input-group margin-bottom-20">		  	  		 		  	
  		<%= f.select :subcategory_id,options_from_collection_for_select(@album.subcategories,:id,:text),{include_blank: false},{:class => "form-control listBox"}%>
  		<%=@album.subcategories.first.text%>
  	</div>
	<%= f.label 'Bilder', :class => 'reg-label'%>
  	<div class="input-group margin-bottom-20">		  	  		 		  	
  		<%= f.file_field :foto, :class => 'form-control' %>
  	</div>
  	<div class="row">
		<%= f.submit "Spara",:class => 'btn-u pull-right' %>	 				
  	</div>
  </div>
<% end %>

<% # jquery image template # %>
<script id="template-image" type="text/x-tmpl"><div class="image">{%=o.name%}<div class="progress"><div class="progress-bar bar" style="width: 0%"></div></div></div></script>