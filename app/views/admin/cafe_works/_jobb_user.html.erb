<%= form_for(@cwork, :html => {  :autocomplete => 'off' }) do |f| %>
	<% if @cwork.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@cwork.errors.count, "error") %> gör att passet inte kan sparas:</h2>
	
	      <ul>
	      <% @cwork.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	      </ul>
	    </div>
  	<% end %>  	
  	De grå fälten tas från din profil, fyll i dem <%=link_to("här",edit_profile_path(current_user.profile))%>.					    
  	<div class="margin-bottom-20">
  		<%= f.label 'Namn & Efternamn', :class => 'reg-label'%>
	  	<div class="row">	
  			<div class="col-md-6"><%= f.text_field :name,:class => 'form-control', readonly: true%></div><div class="col-md-6"> <%= f.text_field :lastname,:class => 'form-control', readonly: true %></div>
		</div> 
  	</div>
  	<%= f.label 'E-post & telefon', :class => 'reg-label'%> 
  	<div class="margin-bottom-20">
  		<div class="row">					  		
  			<div class="col-md-6"><%= f.text_field :email,:class => 'form-control', readonly: true %></div><div class="col-md-6"> <%= f.text_field :phone,:class => 'form-control', readonly: true %></div>		
		</div>
  	</div>
  	<%if @utskott%> 
  	<div class="headline headline-md"><h3>Utskottskampen</h3></div> 		
		<div class="row">
			<div class="col-md-6"> 
				<%= f.label :utskottskamp, "Delta i cafétävlingen?", :value => false,:class => 'reg-label' %>
					<p>Ditt namn kommer synas i resultatet</p>
				<%= f.check_box :utskottskamp,class: 'form-control', value: @cwork.utskottskamp%> 
			</div>	
			<%= f.label "Välj ett eller flera utskott att representera",:class => 'reg-label' %>				  		
			<div class="col-md-6">
				<%=f.collection_check_boxes(:council_ids,@utskott,:id,:title, class:"form-control") do |b|%>
					<span>
						<%=b.check_box%>
						<%=b.label%><br>
					</span>							
				<%end%>					
			</div>
		</div>			
			
	  	<hr>
  	<%end%>
  	<%if @readonly%>
  		<p>Det går inte längre att skriva upp sig på passet eller redigera.</p>
	<%else%>
		<div class="margin-bottom-20">
	  		<%= f.hidden_field :profile_id, value: current_user.profile.id%>
	  		<%= f.submit "Spara",:class => 'btn-u pull-right' %>  		
	  		<%if @cwork.profile == current_user.profile%><%= f.submit "Lämna jobbpasset",:class => 'btn-u pull-left' %><%end%>
	  	</div>  	
  	<%end%>
<% end %>

