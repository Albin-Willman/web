<%= form_for(@album, :html => {  :autocomplete => 'off' }) do |f| %>
  	<%= f.label 'Titel', :class => 'reg-label'%>		  
  	<div class="input-group margin-bottom-20">					
		<%= f.text_field :title, :class => 'form-control',:placeholder => 'Titel'%>		
  	</div>
  	<%= f.label 'Beskrivning', :class => 'reg-label'%>
  	<div class="input-group margin-bottom-20">		  	  		 		  	
  		<%= f.text_area :description, :class => 'form-control',:placeholder => 'Beskrivning' %>
  	</div>			  
  	<%= f.label 'Plats', :class => 'reg-label'%>
  	<div class="input-group margin-bottom-20">
  		<%= f.text_field :location, :class => 'form-control',:placeholder => 'Plats',:autocomplete => 'off' %>
  	</div>
  	<%= f.label 'Start', :class => 'reg-label'%>
  	<div class="input-group margin-bottom-20">		  	  		 		  	
  		<%= f.date_field :start_date, :class => 'form-control' %>
  	</div>
  	<%= f.label 'Slut', :class => 'reg-label'%>
  	<div class="input-group margin-bottom-20">		  	  		 		  	
  		<%= f.date_field :end_date, :class => 'form-control' %>
  	</div>
  	<%= f.label 'Kategori', :class => 'reg-label'%>
  	<div class="input-group margin-bottom-20">
  		<%= f.select :category, 
  				     options_from_collection_for_select(@kategorier,:name,:name,@album.category),
  				     include_blank: false, 
  				     :class => "form-control listBox"%>	
  	</div>
  	<div class="input-group margin-bottom-20">
  		<%= f.select :subcategory_ids, 
  				     options_from_collection_for_select(@subcategories,:id,:text,@album.subcategory_ids),{include_blank: false},{multiple: true,size: 2,:class => "form-control listBox"}%>	
  	</div>
  	<div class="row">
  			<%= f.submit "Spara",:class => 'btn-u pull-right' %>	 				
  	</div>
<% end %>
<script id="template-image" type="text/x-tmpl"><div class="image">{%=o.name%}<div class="progress"><div class="progress-bar bar" style="width: 0%"></div></div></div></script>