<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div id='cafemodul'></div>
			<hr>
		</div>
	</div>
	<div class ="row">
		<% if user_signed_in? %>
		
		<div class="headline headline-md">
			<h2>Verktyg</h2>
		</div>
		<ul class="list">
			<% if current_user.admin? || current_user.has_role?(:event,:edit) %>
			<li><%= link_to "Nytt event", new_event_path %></li>
			<% end %>
			<li><%= link_to 'Prenumerera på caféschemat', 'webcal://dev.fsektionen.se/cafemasteriet/export.ics'%></li>
		</ul>
		
		<% end %>
	</div>
</div>
<script>
		var ready; 
		ready = function() {
	
	$('#cafemodul').fullCalendar({
                
        
        header: {
                 left: 'today',
                 center: 'prev , title , next',
				 right: ' '                                  
             },
        minTime :'8:00',
        maxTime :'15:00',
        defaultView: 'agendaWeek',
        aspectRatio: 2,
        axisFormat: 'HH:mm',
        timeFormat: 'HH:mm',
        allDay: false,
        allDayText: 'Heldag',
        firstDay :1,
        weekNumbers: true,
        monthNames: ['Januari','Februari','Mars','April','Maj','Juni','Juli','Augusti','September','Oktober','November','December'],
        dayNames: ['Söndag','Måndag','Tisdag','Onsdag','Torsdag','Fredag','Lördag'],
        dayNamesShort: ['Sön', 'Mån', 'Tis', 'Ons', 'Tors', 'Fre', 'Lör'],
        weekNumberTitle: 'V',
        weekends: false,
        
        // put your options and callbacks here  
              
    })
		
	};
	
	$(document).on('page:load',ready);
	$(document).ready(ready);
	</script>

