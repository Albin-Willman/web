<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> hindar profilen från att sparas:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Namn:' %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :program %><br>
    <%= f.text_field :program %>
  </div>
  <div class="field">
    <%= f.label 'Började år:' %><br>
    <%= f.number_field :start_year %>
  </div>
  <div class="actions">
    <%= f.submit "Uppdatera profil"%>
  </div>
<% end %>
