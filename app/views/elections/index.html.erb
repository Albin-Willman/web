<% provide(:title, 'Val') %>
<div class="container val-page">
	<% if @valet%>
		<% if @before %>
			<%= render "index_before"%>
		<%elsif @during%>
			<%= render "index_during"%>
		<%elsif @after%>
			<%= render "index_after"%>
		<%end%>
		<%if (@valet) && (@edit) %>
			<div class="col-md-2 col-md-offset-5"><%= link_to("Redigera valet!",election_path(@valet),class: "btn btn-election ")%></div>
		<%end%>
	<%else%>
	<h1>Just nu finns det ingen information om valet.</h1>
	<%= link_to image_tag("layout/f.svg", class: "val-logo"),:root%>
	<%end%>
</div>	
<%if @datum%>
<script type="text/javascript" >
    $("#countdown").countdown('<%=%(#{@datum.strftime('%Y/%m/%d %H:%M:%S')} UTC)%>', function(event) {
        var totalHours = event.offset.totalDays * 24 + event.offset.hours;
        $(this).html(event.strftime(''
             + '<h2>'+totalHours+' timmar '
             + '%-M min '
             + '%-S sekunder</h2>'));
    });
</script>
<%end%>
