<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> hindar posten från att sparas:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Titel:' %><br>
    <%= f.text_field :title %>
  </div>
    <div class="field">
    <%= f.label 'Hur många kan ha rollen?' %><br>
    Lämnas tomt för att skapa en Post utan gräns.<br>
    <%= f.number_field :limit %>
  </div>
   <div class="field">   
   		<%= f.label 'Beskrivning:'%><br>
   		<%= f.text_area :description%>
  	</div>

  <div class="actions">
    <%= f.submit "Skicka"%>
  </div>
<% end %>
