<%= form_for(@dokument, html: {  :autocomplete => 'off' }) do |f| %>
				<% if @dokument.errors.any? %>
				    <div id="error_explanation">
				      <h2><%= pluralize(@dokument.errors.count, "fel") %> gör att dokumentet inte kan sparas:</h2>	
				      <ul>
				      <% @dokument.errors.full_messages.each do |msg| %>
				        <li><%= msg %></li>
				      <% end %>
				      </ul>
				    </div>
			  	<% end %>
			  	  	<%= f.label 'Titel', :class => "reg-label"%>		  
			  	<div class="input-group margin-bottom-20">					
					<%= f.text_field :title, :class => 'form-control',:placeholder => 'Titel'%>		
			  	</div>
			  	<%= f.label 'Kategori', :class => 'reg-label'%>
			  	<div class="input-group margin-bottom-20">  				  	  		 		  	
			  		<%= f.text_field :category, :class => 'form-control'%>
			  	</div>
			  	<%= f.label 'PDF', :class => 'reg-label'%>
			  	<div class="input-group margin-bottom-20">
			  		<%if @dokument.new_record?%>
			  			<%= f.file_field :pdf, :class => 'form-control'%>
			  		<%else%>  				  	  		 		  	
			  			<%= link_to @dokument.pdf, @dokument.pdf.url %>
			  			<%=f.hidden_field :pdf,value: @dokument.pdf%>
		  			<%end%>
			  	</div>
			  	<%= f.label 'Publik?', :class => 'reg-label'%>
			  	<div class="input-group margin-bottom-20">  		
			  		<%= f.check_box :public, :class => 'form-control'%>
			  		Innebär att även de som inte är inloggade kan se dokument.
			  	</div>
			  	<%= f.label 'Går att ladda ner?', :class => 'reg-label'%>  
			  	<div class="input-group margin-bottom-20">
			  		Går inte riktigt att stoppa, men vi får se!  		
			  		<%= f.check_box :download, :class => 'form-control'%>  		
			  	</div>
			  	
			  	<div class="row">
			  			<%= f.submit "Spara",:class => 'btn-u pull-right' %>	 				
			  	</div>
			<% end %>