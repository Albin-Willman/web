<% title('Användare') %>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Namn</th>
      <th>Användarnamn</th>
      <th>Email</th>
      <th>Program</th>
      <th>År</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.profile.name %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.profile.program %></td>
        <td><%= user.profile.start_year %></td>
        <% if current_user.admin? %>
        <td>
			<%= form_tag change_role_path, :method => :put do%>
				<%= hidden_field_tag :user_id, user.id %>
				<%= select_tag :role_id, options_for_select(Role.all.collect{ |r| [r.name, r.id] },user.role_id)%>
				<%= submit_tag %>
				<%end%>
        </td>
        <%end%> 
      </tr>
    <% end %>
  </tbody>
</table>


